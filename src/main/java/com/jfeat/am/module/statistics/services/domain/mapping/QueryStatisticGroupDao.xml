<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.statistics.services.domain.dao.QueryStatisticGroupDao">
    <sql id="Base_Column_List">
            st_statistic_group.*
        </sql>
        <select id="findStatisticGroupPage" resultType="StatisticGroup" parameterType="StatisticGroup">
      SELECT st_statistic_group.*
            FROM st_statistic_group
            WHERE 1=1
                             <if test="statisticGroup.id != null and statisticGroup.id>0 ">
                 AND st_statistic_group.id LIKE CONCAT('%',#{statisticGroup.id},'%')
            </if>
                             <if test="statisticGroup.name != null and statisticGroup.name!= ''">
                 AND st_statistic_group.name LIKE CONCAT('%',#{statisticGroup.name},'%')
            </if>
                             <if test="statisticGroup.pid != null and statisticGroup.pid>0 ">
                 AND st_statistic_group.pid LIKE CONCAT('%',#{statisticGroup.pid},'%')
            </if>
                             <if test="statisticGroup.desc != null and statisticGroup.desc!= ''">
                 AND st_statistic_group.desc LIKE CONCAT('%',#{statisticGroup.desc},'%')
            </if>
                             <if test="statisticGroup.chart != null and statisticGroup.chart!= ''">
                 AND st_statistic_group.chart LIKE CONCAT('%',#{statisticGroup.chart},'%')
            </if>
                    </select>
</mapper>